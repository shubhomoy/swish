<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:id="@+id/list_item"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/airline_tv"
        android:paddingBottom="5dp"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Airline"/>

    <TextView
        android:id="@+id/source_dest_tv"
        android:textSize="17sp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Source to Destination"/>

    <TextView
        android:id="@+id/departure_date_tv"
        android:textSize="17sp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deaprture"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:layout_weight="1"/>

        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrival"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deptime_tv"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/arrtime_tv"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrival"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/duration_tv"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration"/>

    <TextView
        android:id="@+id/price_tv"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"/>

    <TextView
        android:id="@+id/remove_btn"
        android:textColor="#F44336"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:layout_gravity="right"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

</LinearLayout>